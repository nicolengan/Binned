@page
@model Binned.Pages.Products.AddModel
@{
    ViewData["Title"] = "Adding of Products";
}
<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.ProductName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.ProductName" />
            <span asp-validation-for="MyProduct.ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.ProductDescription"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.ProductDescription" />
            <span asp-validation-for="MyProduct.ProductDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.Size"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.Size" />
            <span asp-validation-for="MyProduct.Size" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.Length"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.Length" />
            <span asp-validation-for="MyProduct.Length" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.Waist"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.Waist" />
            <span asp-validation-for="MyProduct.Waist" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.Availability"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyProduct.Availability" />
            <span asp-validation-for="MyProduct.Availability" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyProduct.Price"></label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="MyProduct.Price" />
            <span asp-validation-for="MyProduct.Price" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Products">Cancel</a>
    </div>
</form>
