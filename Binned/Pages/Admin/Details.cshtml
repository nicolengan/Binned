@page
@model Binned.Pages.Admin.DetailsModel
@{
    ViewData["Title"] = "Order Details";
    
}
<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post">
    <span asp-for="@Model.orderid" name="id">@Model.orderid</span>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="status"></label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.status, new SelectList(OrdersModel.Statuses, "Value", "Name"), "-- Select --", new {@class = "form-select"})
            <span class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Update" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Admin/Orders">Cancel</a>
    </div>
</form>