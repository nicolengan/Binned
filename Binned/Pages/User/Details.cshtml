@page
@model Binned.Pages.User.DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<form class="mt-3" method="post">

    <div class="row mb-3">
        <div>Order Id: <span class="" readonly>@Model.MyOrder.OrderId</span></div>
    </div>
    <div class="row mb-3">
        <div>Products: <span class="" readonly>@Model.MyOrder.ProductId</span></div>
    </div>
    <div class="row mb-3">
        <div>Order Date: <span class="" asp-for="MyOrder.OrderDate" readonly>@Model.MyOrder.OrderDate.ToShortDateString()</span></div>
    </div>
    <div class="row mb-3">
        <div>Order Status: <span class="" readonly>@Model.MyOrder.Status</span></div>
    </div>
    <div class="row mb-3">
        <div>Payment status: <span class="" readonly>@Model.MyOrder.PaymentStatus</span></div>
    </div>
    <input class="btn btn-primary" type="submit" value="Order Receieved"></input>

</form>