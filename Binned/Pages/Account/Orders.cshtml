@page
@model Binned.Pages.Account.OrdersModel
@{
}
@*e2b8b8*@
<h2>Your Orders</h2>
<div class="d-inline-block flex-column container">
    @{
        @foreach (var item in Model.OrderList)
        {
            <div class="card h-25 mt-3 border border-0" style="background-color:#f1dbdb;">
                <div class="card-body border border-0">
                    <div class="row">
                        <div class="col-10">
                            <div class="row">
                                <p class="h4 ms-1">#@item.OrderId</p>
                                <div class="col-3">
                                    <img src="~/uploads/placeholder.jpg" class="rounded img-fluid h-auto" alt="..." />
                                </div>
                                <div class="col-9">
                                    <span class="h5" style="color:#71805D;">@item.Status</span><br>
                                    <span class="h5">Order Date: @item.OrderDate.ToShortDateString()</span>
                                    <ul>
                                        @foreach (var product in item.Products)
                                        {
                                            <li style="font-size:18px;">@product.ProductName</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 d-flex flex-column justify-content-end">
                            <div class="h5">Total: $@item.Amount</div>
                            <a class="btn me-3 w-100" asp-page="/Account/OrderDetails" asp-route-id="@item.OrderId" role="button" aria-disabled="true" style="background-color:#71805D;color:#FFFFFF;">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>